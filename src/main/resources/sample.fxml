     <tabs>
        <Tab fx:id="prodLineTab" text="Product Line">
           <content>
              <AnchorPane prefHeight="399.0" prefWidth="533.0">
                 <children>
                    <GridPane alignment="TOP_CENTER" layoutX="75.0" layoutY="58.0" prefHeight="162.0" prefWidth="313.0">
                      <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      </columnConstraints>
                      <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      </rowConstraints>
                       <children>
                          <Label text="Product Name" textAlignment="CENTER" />
                          <TextField GridPane.columnIndex="1" />
                          <Label layoutX="10.0" layoutY="26.0" textAlignment="CENTER" GridPane.rowIndex="1" />
                          <TextField layoutX="140.0" layoutY="22.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                          <Label layoutX="10.0" layoutY="127.0" text="Manufacturer" textAlignment="CENTER" GridPane.rowIndex="1" />
                          <ChoiceBox fx:id="cbItems" prefHeight="28.0" prefWidth="110.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                          <Label layoutX="10.0" layoutY="83.0" text="Item Type" textAlignment="CENTER" GridPane.rowIndex="2" />
                       </children>
                    </GridPane>
                    <Button layoutX="232.0" layoutY="241.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="32.0" prefWidth="107.0" text="Add product">
                       <cursor>
                          <Cursor fx:constant="HAND" />
                       </cursor>

                          </Button>
                 </children></AnchorPane>
           </content>
        </Tab>
        <Tab fx:id="produceTab" text="Produce">
           <content>
              <AnchorPane prefHeight="200.0" prefWidth="200.0">
                 <children>
                    <Label layoutX="73.0" layoutY="60.0" text="Choose Product " />
                    <ListView layoutX="239.0" layoutY="29.0" prefHeight="97.0" prefWidth="131.0" />
                    <Label layoutX="73.0" layoutY="169.0" text="Choose Quantity" />
                    <ComboBox fx:id="cmbQuantity" layoutX="230.0" layoutY="165.0" prefWidth="150.0" />
                    <Button layoutX="239.0" layoutY="261.0" mnemonicParsing="false" onAction="#recProd" text="Record Production" />
                 </children>
              </AnchorPane>
           </content></Tab>
      <Tab fx:id="prodLogTab" text="Production Log">
         <content>
            <AnchorPane prefHeight="304.0" prefWidth="400.0">
               <children>
                  <TextArea layoutX="140.0" layoutY="62.0" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </AnchorPane>
         </content>
      </Tab>

     </tabs>
</TabPane>
